<Page x:Class="Rock.Apps.CheckScannerUtility.SetAccountsForAmountsToSave"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:models="clr-namespace:Rock.Apps.CheckScannerUtility.Models"
      mc:Ignorable="d"
      d:DesignHeight="680"
      d:DesignWidth="900"
      Title="Check Scanner - Options"
      Loaded="Page_Loaded"
      Style="{StaticResource pageBackground}">
    <Page.Resources>
        <HierarchicalDataTemplate  DataType="{x:Type models:DisplayAccount}" ItemsSource="{Binding Children}">
            <CheckBox Name="Account" Margin="5" Content="{Binding AccountDisplayName}" IsChecked="{Binding IsAccountChecked}"/>
        </HierarchicalDataTemplate>
    </Page.Resources>
    <StackPanel>
        <Label Style="{StaticResource labelStyleLegend}"
               Margin="8,0">Options</Label>
        <Border Name="brdScannerInfo"
                Style="{StaticResource borderStyleWell}"
                Visibility="Visible"
                Margin="12,12,12,0">
            <StackPanel>
                <Label Name="lblMakeModel"
                       Style="{StaticResource labelStyle}">Scanner Type:</Label>
                <Label Name="lblInterfaceVersion"
                       Style="{StaticResource labelStyle}">Interface Version:</Label>
                <Label Name="lblFeederType"
                       Style="{StaticResource labelStyle}">FeederType:</Label>
            </StackPanel>
        </Border>
        <Border Name="brdOptions"
                Style="{StaticResource borderStyleWell}"
                Visibility="Visible"
                Margin="12">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Row="0" Grid.Column="0">
                    <Label Style="{StaticResource labelStyle}">Rock URL</Label>
                    <TextBox Name="txtRockUrl"
                         Style="{StaticResource textboxStyleUrl}" />
                    <Label Name="lblScannerError"
                       Style="{StaticResource labelStyleAlertError}"
                       Content="ERROR: No scanner drivers. Make sure that either a Ranger or MagTek driver is installed."
                       Visibility="Collapsed">
                    </Label>
                    <Label Name="lblScannerInterfaceType"
                       Style="{StaticResource labelStyle}">Scanner Interface</Label>
                    <ComboBox Name="cboScannerInterfaceType"
                          Style="{StaticResource textboxStyle}"
                          SelectionChanged="cboScannerInterfaceType_SelectionChanged" />
                    <Label Name="lblMagTekCommPort"
                       Style="{StaticResource labelStyle}">COM Port</Label>
                    <ComboBox Name="cboMagTekCommPort"
                          Style="{StaticResource textboxStyle}" />
                    <Label Name="lblImageOption"
                       Style="{StaticResource labelStyle}">Scan Image Color Type</Label>
                    <ComboBox Name="cboImageOption"
                          Style="{StaticResource textboxStyle}" />
                    <StackPanel Margin="0,10,0,0">
                        <Label Name="lblScanningOptions"
                                 Style="{StaticResource labelStyle}">Scanning Options</Label>
                        <CheckBox Name="chkCaptureAmountOnScan"
                                  Content="Capture Amount on Scan"
                                  Margin="8,8,0,0"
                                  IsChecked="False" />
                        <Label Name="lblDefaultBatchCampus"
                                 Style="{StaticResource labelStyle}">Default Batch Campus</Label>
                        <ComboBox 
                                      x:Name="cbDefaultCampus"    
                                      Style="{StaticResource comboBoxStyle}" />
                        <Label Name="lblBatchOptions"
                                 Style="{StaticResource labelStyle}">Batch Options</Label>
                        <CheckBox Name="chkRequireConrolAmount"
                                  Content="Require Control Amount"
                                  Margin="8,8,0,0"
                                  IsChecked="False" />
                        <CheckBox Name="chkRequireControlItemCount"
                                  Content="Require Control Item Count"
                                  Margin="8,8,0,0"
                                  IsChecked="False" />
                    </StackPanel>
                </StackPanel>
                <StackPanel Grid.Row="0" Grid.Column="1"  VerticalAlignment="Stretch">
                    <ScrollViewer HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Auto">
                        <StackPanel VerticalAlignment="Stretch"  HorizontalAlignment="Stretch" Height="365">
                            <Label Name="lblCapturingAccountAmounts"
                                 Style="{StaticResource labelStyle}">Accounts for Capturing Batches</Label>
                            <TreeView x:Name="icAccountsForBatches" Margin="0,5,0,0" BorderThickness="0" Height="365" ScrollViewer.VerticalScrollBarVisibility="Auto">
                                <TreeView.ItemContainerStyle>
                                    <Style>
                                        <Setter Property="TreeViewItem.IsExpanded" Value="True"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Path=Type}" Value="menu">
                                                <Setter Property="TreeViewItem.IsSelected" Value="True"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TreeView.ItemContainerStyle>
                                <TreeViewItem ItemsSource="{Binding}" Header="{Binding AccountDisplayName}"/>
                            </TreeView>
                        </StackPanel>
                    </ScrollViewer>
                </StackPanel>
                <StackPanel Grid.Row="1" Margin="0,10,0,0" Grid.ColumnSpan="2">
                    <Label Name="lblAdvancedInfo"
                       Style="{StaticResource labelStyleAlertInfo}">
                        Advanced: Sensitivity and Plurality can be tuned from 1-255. Increase sensitivity and/or lower plurality if you are getting too many bad reads.  Normally these can be left blank which will use the default of 128.
                    </Label>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="3*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0"
                                Orientation="Vertical">
                            <Label Name="lblSensitivity"
                               Style="{StaticResource labelStyle}">Sensitivity</Label>
                            <TextBox Name="txtSensitivity"
                                 Style="{StaticResource textboxStyle}"
                                 Width="120" />
                        </StackPanel>
                        <StackPanel Grid.Column="1"
                                Orientation="Vertical">
                            <Label Name="lblPlurality"
                               Grid.Column="1"
                               Style="{StaticResource labelStyle}">Plurality</Label>
                            <TextBox Name="txtPlurality"
                                 Grid.Column="1"
                                 Style="{StaticResource textboxStyle}" Width="120" />
                        </StackPanel>
                    </Grid>
                    <Label Name="lblAlert"
                       Style="{StaticResource labelStyleAlert}"
                       Content="ERROR: ">
                    </Label>
                    <StackPanel Orientation="Horizontal"
                            Margin="0, 8">
                        <Button Style="{StaticResource buttonStylePrimary}"
                            Name="btnSave"
                            Margin="4,4,0,0"
                            Content="Save"
                            HorizontalAlignment="Left"
                            Click="btnSave_Click" />
                        <Button Style="{StaticResource buttonStyle}"
                            Name="btnCancel"
                            Margin="4,4,0,0"
                            Content="Cancel"
                            IsCancel="True"
                            HorizontalAlignment="Left"
                            Click="btnCancel_Click" />
                    </StackPanel>
                </StackPanel>
            </Grid>
          
        </Border>
    </StackPanel>
</Page>
