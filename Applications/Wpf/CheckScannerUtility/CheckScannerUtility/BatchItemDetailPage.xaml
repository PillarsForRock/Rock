<Page x:Class="Rock.Apps.CheckScannerUtility.BatchItemDetailPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      d:DesignHeight="600"
      d:DesignWidth="800"
      Title="BatchItemDetailPage"
      Loaded="Page_Loaded"
      Style="{StaticResource pageBackground}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition  />
            <RowDefinition  Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Transaction Details -->
        <StackPanel Grid.Row="0"
                    Margin="12">
            <Label Content="Scanned Date/Time"
                   Style="{StaticResource labelStyleDt}" />
            <Label Name="lblScannedDateTime"
                   Content="7/16/9999 12:00 AM"
                   Style="{StaticResource labelStyleDd}" />

            <Label Content="Transaction Date/Time"
                   Style="{StaticResource labelStyleDt}" />
            <Label Name="lblTransactionDateTime"
                   Content="7/16/9999 12:00 AM"
                   Style="{StaticResource labelStyleDd}" />

            <Label Content="Batch"
                   Style="{StaticResource labelStyleDt}" />
            <Label Name="lblBatch"
                   Content="7/16/9999 12:00 AM"
                   Style="{StaticResource labelStyleDd}" />

            <Label Content="Source"
                   Style="{StaticResource labelStyleDt}" />
            <Label Name="lblSource"
                   Content="7/16/9999 12:00 AM"
                   Style="{StaticResource labelStyleDd}" />

            <Label Name="lblTransactionCodeLabel"
                Content="Transaction Code"
                   Style="{StaticResource labelStyleDt}" />
            <Label Name="lblTransactionCodeValue"
                   Content="7/16/9999 12:00 AM"
                   Style="{StaticResource labelStyleDd}" />

            <Label Content="Currency Type"
                   Style="{StaticResource labelStyleDt}" />
            <Label Name="lblCurrencyType"
                   Content="7/16/9999 12:00 AM"
                   Style="{StaticResource labelStyleDd}" />

        </StackPanel>
        <!-- Financial Transactions-->
        <StackPanel Grid.Row="1" Grid.ColumnSpan="1" Margin="10">
            <StackPanel HorizontalAlignment="Left" Background="White">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <DataGrid x:Name="lvAccountDetails" RowHeaderWidth="0" AutoGenerateColumns="False" CanUserAddRows="False" CanUserResizeRows="False" >
                            <DataGrid.Columns>
                                <DataGridTextColumn   Header="Account Name" Binding = "{Binding AccountDisplayName}"  Width="Auto" />
                                <DataGridTextColumn   Header="Amount" Binding = "{Binding Amount,StringFormat=C}" Width="Auto">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Right" />
                                            <Setter Property="Margin" Value="0,0,5,0" />
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                        <Grid Width="{Binding ActualWidth, ElementName=lvAccountDetails}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0" Name="lblTotalCaption"  HorizontalAlignment="Left" Content="Total:" FontWeight="Bold" />
                            <Label Grid.Column="1" Name="lblTotal" HorizontalAlignment="Right" Margin="0,0,10,0" />
                        </Grid>
                    </StackPanel>
                </ScrollViewer>
                
            </StackPanel>
        </StackPanel>
        <!-- Check Images -->
        <Grid Grid.Row="0"
              Grid.Column="1"
              Margin="12">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Label Grid.Row="0"
                   Name="lblFront"
                   Content="Front"
                   Grid.Column="1"
                   VerticalAlignment="Bottom"
                   Style="{StaticResource labelStyleDt}" />
            <Image Grid.Row="1"
                   Grid.Column="1"
                   Name="imgFront"
                   Stretch="Uniform"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Source="images/check-image.png" />
            <Label Grid.Row="2"
                   Name="lblBack"
                   Grid.Column="1"
                   Content="Back"
                   VerticalAlignment="Bottom"
                   Style="{StaticResource labelStyleDt}" />
            <Image Grid.Column="1"
                   Grid.Row="3"
                   Name="imgBack"
                   Stretch="Uniform"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Source="images/check-image.png" />

        </Grid>
        <StackPanel Grid.ColumnSpan="2"
                    Grid.Row="2"
                    Margin="8">
            <Button Name="btnClose"
                    Style="{StaticResource buttonStyle}"
                    Content="Close"
                    HorizontalAlignment="Right"
                    IsCancel="True"
                    VerticalAlignment="Bottom"
                    Click="btnClose_Click" />
        </StackPanel>
    </Grid>
</Page>
